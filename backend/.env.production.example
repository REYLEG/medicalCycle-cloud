# Production Environment Configuration
# Copy this file to .env and fill in with production values

# Database
DATABASE_URL=postgresql://medicalcycle_prod:STRONG_PASSWORD@db.example.com:5432/medicalcycle_prod

# Redis
REDIS_URL=redis://:REDIS_PASSWORD@redis.example.com:6379/0

# JWT
SECRET_KEY=GENERATE_STRONG_32_CHARACTER_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=https://app.medicalcycle.com,https://api.medicalcycle.com

# Environment
ENVIRONMENT=production
DEBUG=false

# Encryption
ENCRYPTION_KEY=GENERATE_32_CHARACTER_ENCRYPTION_KEY_HERE

# Database Configuration
DB_USER=medicalcycle_prod
DB_PASSWORD=STRONG_PASSWORD
DB_NAME=medicalcycle_prod

# Redis Configuration
REDIS_PASSWORD=STRONG_REDIS_PASSWORD

# Email (for future notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@medicalcycle.com
SMTP_PASSWORD=EMAIL_PASSWORD
SMTP_FROM=noreply@medicalcycle.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/medicalcycle/app.log

# Security
SECURE_COOKIES=true
SAME_SITE=Lax
SESSION_TIMEOUT=1800

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
